<Window x:Class="DCIMIngester.Windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DCIM Ingester Settings" Height="139" Width="430" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#FF1E1E1E" Loaded="Window_Loaded" Icon="../Resources/Icon.ico">

    <Grid>
        <Label Content="File Transfer Destination:" Margin="10,6,10,0" VerticalAlignment="Top" Foreground="#FFEBEBEB" Padding="0"/>
        <TextBox x:Name="TextBoxEndpoint" Margin="10,27,41,0" VerticalAlignment="Top" Style="{DynamicResource TextBoxStyle}" IsEnabled="False"/>
        <Button x:Name="ButtonSelectEndpoint" Content="..." HorizontalAlignment="Right" Margin="0,27,10,0" VerticalAlignment="Top" Width="26" Click="ButtonSelectEndpoint_Click" Style="{DynamicResource ButtonStyle}"/>

        <Button x:Name="ButtonSave" Content="Save" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="100" Click="ButtonSave_Click" Style="{DynamicResource ButtonStyle}" IsEnabled="False"/>
        <Button x:Name="ButtonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="115,0,0,10" VerticalAlignment="Bottom" Width="80" Click="ButtonCancel_Click" Style="{DynamicResource ButtonStyle}" IsCancel="True"/>
    </Grid>
</Window>
