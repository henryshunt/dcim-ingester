<Window x:Class="DcimIngester.Windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DCIM Ingester Settings" Width="480" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#FF1E1E1E" Loaded="Window_Loaded" SizeToContent="Height" Icon="../Icon.ico">

    <Grid>
        <Label Content="Ingest Destination" Margin="10,6,0,0" VerticalAlignment="Top" Foreground="#FFEBEBEB" Padding="10,0,0,0" HorizontalAlignment="Left"/>
        <TextBox x:Name="TextBoxDestination" Margin="10,27,41,0" VerticalAlignment="Top" Style="{DynamicResource TextBoxStyle}" IsReadOnly="True" TextChanged="TextBoxDestination_TextChanged"/>
        <Button x:Name="ButtonBrowseDestination" Content="..." HorizontalAlignment="Right" Margin="0,27,10,0" VerticalAlignment="Top" Width="26" Click="ButtonBrowseDestination_Click" Style="{DynamicResource ButtonStyle}"/>

        <Label Content="Destination Subfolder Template" Margin="10,63,0,0" VerticalAlignment="Top" Foreground="#FFEBEBEB" Padding="10,0,0,0" HorizontalAlignment="Left"/>
        <ComboBox x:Name="ComboBoxSubfolders" Margin="10,84,10,0" VerticalAlignment="Top" Style="{DynamicResource ComboBoxStyle}" SelectionChanged="ComboBoxSubfolders_SelectionChanged">
            <ComboBox.Items>
                <ComboBoxItem Content="Destination\YYYY\MM\DD" Style="{DynamicResource ComboBoxItemStyle}"/>
                <ComboBoxItem Content="Destination\YYYY\YYYY-MM-DD" Style="{DynamicResource ComboBoxItemStyle}"/>
                <ComboBoxItem Content="Destination\YYYY-MM-DD" Style="{DynamicResource ComboBoxItemStyle}"/>
            </ComboBox.Items>
        </ComboBox>

        <Button x:Name="ButtonSave" Content="Save" HorizontalAlignment="Right" Margin="0,120,95,10" VerticalAlignment="Top" Width="100" Click="ButtonSave_Click" Style="{DynamicResource ButtonStyle}"/>
        <Button x:Name="ButtonCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,120,10,10" VerticalAlignment="Top" Width="80" Click="ButtonCancel_Click" Style="{DynamicResource ButtonStyle}" IsCancel="True"/>
    </Grid>
</Window>
